<!DOCTYPE html>
<html>
    <head>
        <title>Add Course</title>
        <link rel="stylesheet" href="css/theme.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    </head>
    <body>
        {{> header user}}
        <div class="container">
            <br/>
            <h1>Add Course</h1>
            <br/>
            {{#if user.isManager}}
                <div class="row">
                    <main class="col-md-12">
                        <form method = "post" action = "/courses/add">
                            <fieldset>
                                <br>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Course Number</label>
                                            <input class="form-control" name = "courseId" type="text"/>
                                        </div>
                                    </div>
 
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Course Name</label>
                                            <input class="form-control" name = "courseName" type="text"/>
                                        </div>
                                    </div>
                                </div>

                               <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>Course Price:</label>
                                            <input class="form-control" name = "coursePrice" type="text" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>CreatedAt:</label>
                                            <input class="form-control" name = "createdAt" type="text"  />
                                        </div>
                                    </div>
                                   <div class="col-md-3">
                                        <div class="form-group">
                                            <label>updatedAt:</label>
                                            <input class="form-control" name = "updatedAt" type="text"  />
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <hr />
                            <input type="submit" class="btn btn-primary float-right" value="Add Course" /><br /><br /><br />
                        </form>
                    </main>
                </div>
            {{else}}
                <p class="errorMsg">You are not authorized to see this page.</p>
            {{/if}}
        </div>
        {{> footer}}
    </body>
</html>