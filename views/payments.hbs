<!DOCTYPE html>
<html>
    <head>
        <title>Payment</title>
        <link rel="stylesheet" href="css/theme.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    </head>
    <body>
        {{!-- {{> header user}} --}}
        <div class="container">
            <br/>
            <h1>Payment</h1>
            <br/>
            {{!-- {{#if user.isManager}} --}}
                <div class="row">
                    <main class="col-md-12">
                        <form method = "get" action = "/payment_results">
                            <fieldset>
                                <br>
                                <legend>Course Information</legend>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Student Id</label>
                                            <input class="form-control" name = "studentId" type="text" value="{{student_courses.studentId}}"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Course Name:</label>
                                            <input class="form-control" name = "courseName" id ="courseName" type="text" value="{{student_courses.courseName}}"/>
                                        </div>
                                    </div>                                
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Course Id:</label>
                                            <input class="form-control" name = "courseId" id ="courseId" type="text" value="{{student_courses.Id}}"/>
                                        </div>
                                    </div>
 
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Course Price:</label>
                                            <input class="form-control" id="coursePrice" name = "coursePrice" type="text" value="{{student_courses.price}}" />
                                        </div>
                                    </div>
                                </div>
                             </fieldset>

                            <fieldset>
                                <br>
                                <legend>Payment Information</legend>
                                <div class="row">
                                    <div class="col-md-12">
                                            <h3 class="text-center">Payment Details</h3>
                                            <img class="img-responsive cc-img" src="https://www.prepbootstrap.com/Content/images/shared/misc/creditcardicons.png">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>CARD NUMBER</label>
                                            <div class="input-group">
                                                <input type="tel" class="form-control" placeholder="Valid Card Number" />
                                                <span class="input-group-addon"><span class="fa fa-credit-card"></span></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-7 col-md-7">
                                        <div class="form-group">
                                            <label><span class="hidden-xs">EXPIRATION</span><span class="visible-xs-inline">EXP</span> DATE</label>
                                            <input type="tel" class="form-control" placeholder="MM / YY" />
                                        </div>
                                    </div>
                                    <div class="col-xs-5 col-md-5 pull-right">
                                        <div class="form-group">
                                            <label>CV CODE</label>
                                            <input type="tel" class="form-control" placeholder="CVC" />
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="form-group">
                                            <label>CARD OWNER</label>
                                            <input type="text" class="form-control" placeholder="Card Owner Names" />
                                        </div>
                                    </div>
                                </div>                                

                             </fieldset>


                            <hr />
                            <input type="submit" class="btn btn-primary float-right" value="Submit & Process Pay" /><br /><br /><br />
                        </form>
                    </main>
                </div>
            {{!-- {{else}}
                <p class="errorMsg">You are not authorized to see this page.</p>
            {{/if}} --}}
        </div>
        {{!-- {{> footer}} --}}

    </body>
</html>