<!DOCTYPE html>
<html>
    <head>
        <title>Add Teacher</title>
        <link rel="stylesheet" href="css/theme.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    </head>
    <body>
        {{> header user}}
        <div class="container">
            <br/>
            <h1>Add Teacher</h1>
            <br/>
            {{#if user.isManager}}
                <div class="row">
                    <main class="col-md-12">
                        <form method = "post" action = "/teachers/add">
                            <fieldset>
                                <br>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Teacher Name</label>
                                            <input class="form-control" name = "teacherName" type="text"/>
                                        </div>
                                    </div>
                                </div>

                               <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Email:</label>
                                            <input class="form-control" name = "email" type="text" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Identity Number:</label>
                                            <input class="form-control" name = "SSN" type="text"  />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>Address (Street):</label>
                                            <input class="form-control" name = "addressStreet" type="text"  />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <label >Address (City/Town):</label>
                                        <input class="form-control" id="addressCity" name = "addressCity" type="text"  />
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>Address (Province/State):</label>
                                            <input class="form-control" name = "addressState" type="text"  />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>Address (Postal Code):</label>
                                            <input class="form-control" name = "addressPostal" type="text" />
                                        </div>
                                    </div>
                                </div>
                                 
                            </fieldset>
                            <fieldset>
                                <legend>Personal Information</legend>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>Is Manager:</label>
                                            <br/>
                                            <input class="form-check-input" name = "isManager" type="checkbox" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>Highest Education:</label>
                                            <input class="form-control" name = "education" type="text"  />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>Graduate School:</label>
                                            <input class="form-control" name = "graduateSchool" type="text"  />
                                        </div>
                                    </div>


                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>Status:</label><br />
                                            <label class="checkbox-inline">
                                                <input type="radio" name = "status" value="Full Time" /> Full Time
                                            </label>
                                            <label class="checkbox-inline">
                                                <input type="radio" name = "status" value="Part Time" /> Part Time
                                            </label>
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                   <div class="col-md-3">
                                        <div class="form-group">
                                            <label>Hired Date</label>
                                            <input class="form-control" name = "hireDate" type="text" />
                                        </div>
                                    </div>
                                   <div class="col-md-3">
                                        <div class="form-group">
                                            <label>End Date</label>
                                            <input class="form-control" name = "endDate" type="text" />
                                        </div>
                                    </div>
                                   <div class="col-md-3">
                                        <div class="form-group">
                                            <label>Updated At:</label>
                                            <input class="form-control" name = "updatedAt" type="text" />
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <hr />
                            <input type="submit" class="btn btn-primary float-right" value="Add Teacher" /><br /><br /><br />
                        </form>
                    </main>
                </div>
            {{else}}
                <p class="errorMsg">You are not authorized to see this page.</p>
            {{/if}}
        </div>
        {{> footer}}
    </body>
</html>